<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aaspng"
    tools:context=".ma2_0.user.ChinhSuaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#43000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edt_nguoiDung_chinhSua_usesName"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/cuttun_edittext"
            android:ems="10"
            android:gravity="center"
            android:hint="Tên đăng nhâp"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#818181"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/edt_nguoiDung_chinhSua_email"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/cuttun_edittext"
            android:ems="10"
            android:gravity="center"
            android:hint="Gmail"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#818181"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cuttun_tile"
            android:padding="3dp"
            android:text="Tên đăng nhập"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/edt_nguoiDung_chinhSua_usesName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cuttun_tile"
            android:padding="3dp"
            android:text="Gmail"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/edt_nguoiDung_chinhSua_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_nguoiDung_chinhSua_usesName" />

        <Button
            android:id="@+id/btn_nguoiDung_chinhSua_xacNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cuttun_buttun"
            android:gravity="center"
            android:padding="10dp"
            android:text="Chỉnh sửa"
            android:textColor="#FF9800"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_nguoiDung_chinhSua_huy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_nguoiDung_chinhSua_email" />

        <Button
            android:id="@+id/btn_nguoiDung_chinhSua_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cuttun_buttun"
            android:text="Hủy"
            android:textColor="#FF9800"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_nguoiDung_chinhSua_xacNhan"
            app:layout_constraintTop_toBottomOf="@+id/edt_nguoiDung_chinhSua_email" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>